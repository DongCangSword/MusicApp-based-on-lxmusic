<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- 模糊背景示意（实际需运行时设置专辑封面高斯模糊） -->
    <View
        android:id="@+id/bg_blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C8C8C8" />

    <!-- 小白条（放在顶部） -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="48dp"
        android:layout_height="6dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_rounded_card" />

    <!-- 第一栏：封面 + 歌曲名 / 收藏 + 更多 -->
    <RelativeLayout
        android:id="@+id/player_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/player_cover"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:importantForAccessibility="no"
            android:src="@android:drawable/ic_menu_gallery"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:id="@+id/player_meta"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/player_cover"
            android:layout_toEndOf="@id/player_cover"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap,RtlHardcoded">

            <TextView
                android:id="@+id/player_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_song"
                android:textSize="18sp"
                android:fontFamily="@font/pingfang_bold_0"/>

            <TextView
                android:id="@+id/player_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/example_songer"
                android:textSize="14sp"
                android:fontFamily="@font/pingfang_regular_0"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@id/btn_more"
            android:layout_centerVertical="true"
            android:importantForAccessibility="no"
            android:src="@drawable/star_off"
            android:scaleType="fitCenter"
            android:background="@drawable/bg_btn_favorite"
            app:tint="@color/white" />
        <ImageButton
            android:id="@+id/btn_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="69dp"
            android:importantForAccessibility="no"
            android:src="@drawable/more"
            android:scaleType="fitCenter"
            android:background="@drawable/bg_btn_favorite" />
    </RelativeLayout>

    <!-- 歌词容器（默认可见） -->
    <LinearLayout
        android:id="@+id/lyricsContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="12dp"
        android:layout_below="@id/player_header"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/lyrics_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="@string/example_nowwords"
            android:textSize="18sp"
            android:fontFamily="@font/pingfang_bold_0"/>

        <TextView
            android:id="@+id/lyrics_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#B8A091"
            android:text="@string/example_otherwords"
            android:fontFamily="@font/pingfang_regular_0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_above="@id/bottom_icons">
        <!-- 播放进度/时长（简化） -->
        <SeekBar
            android:id="@+id/seek_progress"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progressDrawable="@drawable/bg_seek_progress"
            android:thumb="@color/white"
            android:max="100"
            android:layout_marginTop="8dp" />

        <!-- 播放控制按钮行 -->
        <LinearLayout
            android:id="@+id/control_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <ImageButton
                android:id="@+id/btn_prev"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_prev"
                android:background="@null" />

            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_play"
                android:background="@null"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_next"
                android:background="@null" />
        </LinearLayout>

        <!-- 音量调节行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginEnd="3dp"
                android:src="@drawable/volume_min"
                android:scaleType="fitCenter"
                android:importantForAccessibility="no"
                android:background="#00FFFFFF"
                app:tint="@color/white"/>
            <!-- 音量条 -->
            <SeekBar
                android:id="@+id/seek_volume"
                android:layout_width="335dp"
                android:layout_height="8dp"
                android:progressDrawable="@drawable/bg_seek_progress"
                android:thumb="@color/white"
                android:max="100"
                android:layout_marginTop="3dp"
                android:paddingStart="-3dp"
                tools:ignore="RtlSymmetry" />
            <ImageButton
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/volume_max"
                android:scaleType="fitCenter"
                android:importantForAccessibility="no"
                android:background="#00FFFFFF"
                app:tint="@color/white"
                android:paddingBottom="2dp"
                android:layout_marginStart="-10dp"/>
        </LinearLayout>
    </LinearLayout>



    <!-- 底部三个图标 -->
    <LinearLayout
        android:id="@+id/bottom_icons"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/btn_toggle_lyrics"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_icon_bg_selector"
            android:importantForAccessibility="no"
            android:src="@drawable/toggle_lyrics"
            android:padding="13dp"
            android:scaleType="fitCenter"
            android:layout_marginEnd="40dp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btn_air_play"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_icon_bg_selector"
            android:importantForAccessibility="no"
            android:src="@drawable/air_play"
            android:padding="13dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="40dp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btn_playlist"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_icon_bg_selector"
            android:importantForAccessibility="no"
            android:src="@drawable/playlist"
            android:padding="13dp"
            android:scaleType="fitCenter"
            android:layout_marginStart="40dp"
            app:tint="@color/white"/>
    </LinearLayout>

    <!-- 播放列表区域（隐藏/显示） -->
    <LinearLayout
        android:id="@+id/playlistContainer"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="gone"
        android:layout_above="@id/bottom_icons">

        <TextView
            android:id="@+id/playlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_playlist" />
    </LinearLayout>
</RelativeLayout>
